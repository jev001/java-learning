<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true" />

    <package name="basicstrus2" extends="struts-default">
        <default-action-ref name="index" />
        <action name="index">
            <result>/index.jsp</result>
        </action>

        <action name="hello" class="com.rovo98.struts.helloworld.action.HelloWorldAction"
                method="execute">
            <result name="success">/HelloWorld.jsp</result>
        </action>

        <action name="registerInput" class="com.rovo98.struts.register.action.Register"
                method="input">
            <result name="input">/register.jsp</result>
        </action>
        <action name="register" class="com.rovo98.struts.register.action.Register"
                method="execute">
            <result name="success">/thankyou.jsp</result>
            <result name="input">/register.jsp</result>
        </action>
    </package>
</struts>